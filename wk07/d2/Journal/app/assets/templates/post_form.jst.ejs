<h2>New Post</h2>

<form id="post-form">
  <label>Title
    <input type="text" name="title" value="<%= post.get('title') || "" %>">
  </label>
  <br>
  <label>Body
    <input type="text" name="body" value="<%= post.get('body') || "" %>">
  </label>
  <input type="submit" value="Create New Post">
</form>