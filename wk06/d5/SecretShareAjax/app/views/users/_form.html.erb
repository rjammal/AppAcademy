<% action = (user.persisted? ? user_url(user) : users_url) %>
<% method = (user.persisted? ? "patch" : "post") %>
<% message = (user.persisted? ? "Update user" : "Create user") %>

<form action="<%= action %>" method="post" id="new_secret">
  <input
     name="_method"
     type="hidden"
     value="<%= method %>">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <label>Username
    <input name="user[username]" type="text">
  </label>
  <br>

  <label>Password
    <input name="user[password]" type="password">
  </label>
  <br>

  <input type="submit" value="<%= message %>" id="new_secret_submit">
</form>
